# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Application Configuration
NODE_ENV=development
API_PORT=3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=20

# Scraper Configuration
SCRAPER_TIMEOUT_MS=10000
SCRAPER_MAX_CONCURRENT=5
SCRAPER_DELAY_MS=1000

# Cache Configuration (optional)
CACHE_TTL_SECONDS=300

# Logging
LOG_LEVEL=info

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,https://your-wix-site.com

# ===========================================
# PRODUCTION SETTINGS FOR VERCEL DEPLOYMENT
# ===========================================
# Copy these to your Vercel environment variables:

# Production Rate Limiting (more restrictive)
# RATE_LIMIT_MAX_REQUESTS=10
# RATE_LIMIT_WINDOW_MS=60000

# Production Scraper Settings
# SCRAPER_TIMEOUT_MS=15000
# SCRAPER_MAX_CONCURRENT=3
# SCRAPER_DELAY_MS=2000

# Production Cache
# CACHE_TTL_SECONDS=600

# Production Logging
# LOG_LEVEL=warn

# Production CORS - Replace with your actual Wix site URL
# ALLOWED_ORIGINS=https://your-wix-site.wixsite.com,https://yourdomain.com

